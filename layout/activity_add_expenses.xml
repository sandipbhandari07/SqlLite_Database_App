<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uuu22"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/backbtn"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Back"
        android:textColor="@color/black"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/personalexp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"

        android:text="Personal Expenses"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/exp_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personalexp"
        android:layout="@id/exphead"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Expenses Head"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/exphead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personalexp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/exp_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exphead"
        android:layout="@id/date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:padding="10dp"
        android:textStyle="bold"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/exphead"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/exp_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout="@id/amount"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Amount"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textColorHint="@color/black" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/savebtn"
        android:textStyle="bold"
        android:layout_below="@id/amount"
        android:text="Save"
        android:backgroundTint="@color/design_default_color_primary_variant"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_margin="40dp"
        />
</RelativeLayout>