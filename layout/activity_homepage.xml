<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uuu22"
    tools:context=".homepageActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personalexp"
        android:text="Personal Expenses"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_margin="70dp"
        android:gravity="center"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/personalexp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="+ Add Expenses"
        android:textSize="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/addexp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="View Expenses"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout"
        android:layout_width="107dp"
        android:layout_height="46dp"
        android:layout_below="@id/viewexp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/design_default_color_error"
        android:text="logout"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="bold" />

</RelativeLayout>